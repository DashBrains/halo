{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6"
    ],
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/**.stories.tsx"
  ]
}