{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@mui/system": ["node_modules/@mui/system"]
    },
    "declaration": true,
    "declarationDir": "dist",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/**.stories.tsx"
  ]
}